@using ContractManagement.UI.Blazor.Shared.Theme
@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="@CustomTheme.DefaultTheme"  @ref="_mudThemeProvider"/>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.DarkMode" OnClick="ToggleDarkMode" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" >
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Mudblazor</MudText>
        </MudDrawerHeader>
        <MyNavMenu/>
    </MudDrawer>
    <MudMainContent Class="pt-16">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;
    private MudTheme _lightTheme = CustomTheme.DefaultTheme;
    private MudTheme _darkTheme = new MudTheme()
    {
        PaletteDark = new PaletteDark()
        {
            Primary = Colors.Blue.Lighten3,
            Background = Colors.Gray.Darken4,
            Surface = Colors.Gray.Darken3
        }
    };

    private MudTheme _currentTheme = new MudTheme();
    private bool _isDarkMode;
    private MudThemeProvider _mudThemeProvider = new MudThemeProvider();

   

    protected override void OnInitialized()
    {
        _currentTheme = _lightTheme;
    }

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
    private void ToggleDarkMode()
    {
        _isDarkMode = !_isDarkMode;
        _currentTheme = !_isDarkMode ? _darkTheme : _lightTheme;
    }
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _isDarkMode = await _mudThemeProvider.GetSystemDarkModeAsync();
            StateHasChanged();
        }
    }  
}